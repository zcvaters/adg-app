---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { SEO } from 'astro-seo';
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
	image?: string;
	canonicalURL?: string;
}

const { 
	title,
	description = "Avalon Disc Golfers is Newfoundland and Labrador's premier disc golf club. Join our community in St. John's and across the Avalon Peninsula for tournaments, leagues, and casual play in Canada's easternmost province.",
	image = "/adg-logo.jpg",
	canonicalURL = Astro.url.href,
} = Astro.props;

const fullTitle = `${title} | Avalon Disc Golfers - St. John's, Newfoundland`;
const siteUrl = "https://avalondiscgolfers.ca";
const keywords = "disc golf St. John's, disc golf Newfoundland, disc golf NL, frisbee golf St. John's, Avalon disc golf, disc golf courses St. John's, disc golf club Newfoundland, disc golf Avalon Peninsula, disc golf tournaments NL, disc golf leagues St. John's, McNiven disc golf, Confederation disc golf, Atlantic Canada disc golf, disc golf Canada east coast";

// Structured data for local organization - optimized for Google local search
const structuredData = {
	"@context": "https://schema.org",
	"@type": ["SportsOrganization", "Organization"],
	"@id": `${siteUrl}/#organization`,
	"name": "Avalon Disc Golfers",
	"alternateName": ["ADG", "Avalon Disc Golf Club", "St. John's Disc Golf"],
	"description": "Avalon Disc Golfers is the premier disc golf club in St. John's, Newfoundland and Labrador. We organize tournaments, leagues, and maintain disc golf courses on the Avalon Peninsula.",
	"url": siteUrl,
	"logo": {
		"@type": "ImageObject",
		"url": `${siteUrl}/adg-logo.jpg`,
		"width": 400,
		"height": 400
	},
	"image": [
		`${siteUrl}/adg-logo.jpg`,
		`${siteUrl}/banner.jpg`
	],
	"address": {
		"@type": "PostalAddress",
		"streetAddress": "McNiven DiscGolfPark",
		"addressLocality": "St. John's",
		"addressRegion": "NL",
		"postalCode": "A1A",
		"addressCountry": "CA"
	},
	"geo": {
		"@type": "GeoCoordinates",
		"latitude": 47.596938063390944,
		"longitude": -52.748444347816736
	},
	"areaServed": [
		{
			"@type": "City",
			"name": "St. John's",
			"containedInPlace": {
				"@type": "AdministrativeArea",
				"name": "Newfoundland and Labrador"
			}
		},
		{
			"@type": "Place",
			"name": "Avalon Peninsula"
		},
		{
			"@type": "AdministrativeArea",
			"name": "Newfoundland and Labrador"
		}
	],
	"sport": "Disc Golf",
	"sameAs": [
		"https://www.facebook.com/groups/1705263463278631",
		"https://www.instagram.com/avalondiscgolfers",
		"https://discord.gg/ggGxeEAKD"
	],
	"knowsAbout": ["Disc Golf", "Frisbee Golf", "Disc Golf Courses", "Disc Golf Tournaments"],
	"slogan": "Growing the sport of disc golf in Newfoundland and Labrador"
};

// Additional structured data for the website
const websiteSchema = {
	"@context": "https://schema.org",
	"@type": "WebSite",
	"@id": `${siteUrl}/#website`,
	"url": siteUrl,
	"name": "Avalon Disc Golfers",
	"description": description,
	"publisher": {
		"@id": `${siteUrl}/#organization`
	},
	"inLanguage": "en-CA"
};
---

<!DOCTYPE html>
<html lang="en-CA" class="bg-primary-50">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<link rel="apple-touch-icon" href="/favicon.png" />
		<title>{fullTitle}</title>
		
		<!-- SEO Meta Tags -->
		<SEO
			title={fullTitle}
			description={description}
			canonical={canonicalURL}
			openGraph={{
				basic: {
					title: fullTitle,
					type: "website",
					image,
					url: canonicalURL,
				},
				image: {
					alt: "Avalon Disc Golfers - Disc Golf Club in Newfoundland and Labrador, Canada",
				},
				optional: {
					description,
					siteName: "Avalon Disc Golfers",
					locale: "en_CA",
				},
			}}
			twitter={{
				card: "summary_large_image",
				title: fullTitle,
				description,
				image,
			}}
		/>
		
		<!-- Additional SEO Meta Tags -->
		<meta name="keywords" content={keywords} />
		<meta name="author" content="Avalon Disc Golfers" />
		<meta name="robots" content="index, follow" />
		
		<!-- Geographic Meta Tags -->
		<meta name="geo.region" content="CA-NL" />
		<meta name="geo.placename" content="St. John's, Newfoundland and Labrador" />
		<meta name="geo.position" content="47.596938063390944;-52.748444347816736" />
		<meta name="ICBM" content="47.596938063390944, -52.748444347816736" />
		
		<!-- Language and Locale -->
		<meta property="og:locale" content="en_CA" />
		<link rel="alternate" hreflang="en-CA" href={canonicalURL} />
		
		<!-- Structured Data for Local SEO -->
		<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
		<script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
		<meta name="generator" content={Astro.generator} />
	</head>
	<body class="min-h-screen flex flex-col bg-white text-primary-800">
		<Navigation />
		<main class="flex-grow container mx-auto px-4 py-8">
			<slot />
		</main>
		<Footer />
		<script>
			// Scroll reveal animation
			const observerOptions = {
				root: null,
				rootMargin: '0px',
				threshold: 0.1
			};

			const observer = new IntersectionObserver((entries) => {
				entries.forEach(entry => {
					if (entry.isIntersecting) {
						entry.target.classList.add('is-visible');
					}
				});
			}, observerOptions);

			document.addEventListener('DOMContentLoaded', () => {
				const revealElements = document.querySelectorAll('.reveal-on-scroll');
				revealElements.forEach(element => observer.observe(element));
			});
		</script>
	</body>
</html>

<style is:global>
	:root {
		/* Primary blues - richer navy */
		--primary-50: #EEF2F7;
		--primary-100: #D1DEEC;
		--primary-200: #A3BCD9;
		--primary-300: #759AC7;
		--primary-400: #4778B4;
		--primary-500: #1A56A2;
		--primary-600: #154482;
		--primary-700: #103261;
		--primary-800: #0A2141;
		--primary-900: #051020;

		/* Secondary reds - deeper crimson */
		--secondary-500: #B01E3A;
		--secondary-600: #8A1730;

		/* Accent gold - warmer */
		--accent-500: #F5A623;
		--accent-600: #D88C1A;

		/* Background tones */
		--bg-primary: #F8FAFC;
		--bg-secondary: #FFFFFF;
		--bg-tertiary: #EEF2F7;
	}
	
	html {
		font-family: 'Inter', system-ui, -apple-system, sans-serif;
		background-color: var(--bg-primary);
	}

	body {
		background-color: var(--bg-primary);
		color: var(--primary-800);
	}

	main {
		max-width: 1200px;
		margin: 0 auto;
		padding: 1rem;
	}

	::selection {
		background-color: var(--accent-500);
		color: var(--primary-800);
	}

	h1 {
		@apply text-4xl font-bold text-primary-700 mb-6;
	}

	h2 {
		@apply text-3xl font-semibold text-primary-700 mb-4;
	}

	h3 {
		@apply text-2xl font-semibold text-primary-700 mb-3;
	}

	p {
		@apply text-primary-700 mb-4 leading-relaxed;
	}

	a:not([class]) {
		@apply text-secondary-500 hover:text-secondary-600 underline;
	}

	button, .button {
		@apply bg-primary-600 text-white px-6 py-2 rounded-lg hover:bg-primary-700 transition-colors shadow-sm;
	}

	button.secondary, .button.secondary {
		@apply bg-secondary-500 hover:bg-secondary-600 shadow-sm;
	}

	button.accent, .button.accent {
		@apply bg-accent-500 text-primary-800 hover:bg-accent-600 shadow-sm;
	}

	.card {
		@apply bg-bg-secondary rounded-lg shadow-md border border-primary-100;
	}
</style> 