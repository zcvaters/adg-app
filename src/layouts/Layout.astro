---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { SEO } from 'astro-seo';
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
	image?: string;
	canonicalURL?: string;
}

const { 
	title,
	description = "Avalon Disc Golfers - Growing the sport of disc golf in the Avalon Peninsula",
	image = "/adg-logo.jpg",
	canonicalURL = Astro.url.href,
} = Astro.props;

const fullTitle = `${title} | Avalon Disc Golfers`;
---

<!DOCTYPE html>
<html lang="en" class="bg-primary-50">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<link rel="apple-touch-icon" href="/favicon.png" />
		<title>{fullTitle}</title>
		<SEO
			title={fullTitle}
			description={description}
			canonical={canonicalURL}
			openGraph={{
				basic: {
					title: fullTitle,
					type: "website",
					image,
					url: canonicalURL,
				},
				image: {
					alt: "Avalon Disc Golfers Logo",
				},
				optional: {
					description,
					siteName: "Avalon Disc Golfers",
				},
			}}
			twitter={{
				card: "summary_large_image",
				title: fullTitle,
				description,
				image,
			}}
		/>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
	</head>
	<body class="min-h-screen flex flex-col bg-white text-primary-800">
		<Navigation />
		<main class="flex-grow container mx-auto px-4 py-8">
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		--primary-50: #E6EEF7;
		--primary-500: #002868;
		--secondary-500: #C41E3A;
		--accent-500: #FFB612;
	}
	
	html {
		font-family: 'Inter', system-ui, -apple-system, sans-serif;
	}

	main {
		max-width: 1200px;
		margin: 0 auto;
		padding: 1rem;
	}

	::selection {
		background-color: var(--accent-500);
		color: var(--primary-500);
	}

	h1 {
		@apply text-4xl font-bold text-primary-600 mb-6;
	}

	h2 {
		@apply text-3xl font-semibold text-primary-600 mb-4;
	}

	h3 {
		@apply text-2xl font-semibold text-primary-600 mb-3;
	}

	p {
		@apply text-primary-800 mb-4 leading-relaxed;
	}

	a:not([class]) {
		@apply text-secondary-500 hover:text-secondary-600 underline;
	}

	button, .button {
		@apply bg-primary-500 text-white px-6 py-2 rounded-lg hover:bg-primary-600 transition-colors;
	}

	button.secondary, .button.secondary {
		@apply bg-secondary-500 hover:bg-secondary-600;
	}

	button.accent, .button.accent {
		@apply bg-accent-500 text-primary-800 hover:bg-accent-600;
	}
</style> 