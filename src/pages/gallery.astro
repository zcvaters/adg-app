---
import Layout from '../layouts/Layout.astro';
import EventGallery from '../components/EventGallery.astro';
import { getUniqueEvents, getEventMediaByEventId } from '../data/eventPhotos';

interface Event {
    id: string;
    name: string;
    date: Date;
}

const events = getUniqueEvents();
---

<Layout title="Event Gallery - Avalon Disc Golfers">
    <div class="max-w-7xl mx-auto px-4 py-8">
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-primary-700 mb-4">Event Gallery</h1>
            <p class="text-xl text-primary-600">Relive our past events through photos and videos</p>
        </div>

        <div class="space-y-16">
            {events.map((event: Event) => (
                <div class="event-section">
                    <EventGallery 
                        media={getEventMediaByEventId(event.id)}
                        eventName={event.name}
                    />
                    <div class="mt-4 border-b border-primary-200"></div>
                </div>
            ))}
        </div>
    </div>
</Layout> 