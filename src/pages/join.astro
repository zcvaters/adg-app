---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Join the Club - Avalon Disc Golfers">
    <div
        class="relative text-center mb-12 py-16 bg-gradient-to-b from-primary-100 to-bg-primary rounded-lg overflow-hidden"
    >
        <!-- Decorative disc golf elements -->
        <div class="absolute top-0 right-0 transform translate-x-1/2 -translate-y-1/2 opacity-10">
            <svg class="w-96 h-96" viewBox="0 0 24 24" fill="currentColor">
                <path
                    d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"
                ></path>
                <circle cx="12" cy="12" r="3"></circle>
            </svg>
        </div>
        <h1 class="text-5xl font-bold text-primary-700 mb-4">Become a Member</h1>
        <p class="text-xl text-primary-600 max-w-2xl mx-auto">
            Submit the form below to and we'll get back to you as soon as possible.
        </p>
    </div>

    <div class="max-w-2xl mx-auto px-4 pb-16">
        <form
            action="https://formsubmit.co/avalongdiscgolfers@gmail.com"
            method="POST"
            class="space-y-6 bg-white p-8 rounded-lg shadow-lg"
        >
            <input type="text" name="_honey" style="display:none" />
            <input type="hidden" name="_captcha" value="false" />
            <input type="hidden" name="_next" value="https://www.avalondiscgolfers.com/thanks" />
            <input type="hidden" name="_subject" value="New Club Membership Application" />

            <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
                    What is your email? *
                </label>
                <input
                    type="email"
                    name="email"
                    id="email"
                    required
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
                    placeholder="Enter your email address"
                />
            </div>

            <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-1">
                    What is your name? *
                </label>
                <input
                    type="text"
                    name="name"
                    id="name"
                    required
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
                    placeholder="Enter your full name"
                />
            </div>

            <div>
                <label for="location" class="block text-sm font-medium text-gray-700 mb-1">
                    What town/city in Newfoundland do you live? *
                </label>
                <input
                    type="text"
                    name="location"
                    id="location"
                    required
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
                    placeholder="Enter your town/city"
                />
            </div>

            <div>
                <label for="experience" class="block text-sm font-medium text-gray-700 mb-1">
                    How long have you been playing disc golf?
                </label>
                <input
                    type="text"
                    name="experience"
                    id="experience"
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
                    placeholder="Enter your disc golf experience"
                />
            </div>

            <div>
                <label for="interest" class="block text-sm font-medium text-gray-700 mb-1">
                    Are you interested in playing in Leagues and Tournaments?
                </label>
                <input
                    type="text"
                    name="interest"
                    id="interest"
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
                    placeholder="Yes/No"
                />
            </div>

            <div>
                <label for="suggestions" class="block text-sm font-medium text-gray-700 mb-1">
                    Do you have any suggestions or ideas that can make this club more successful or increase your enjoyment in disc golf?
                </label>
                <textarea
                    name="suggestions"
                    id="suggestions"
                    rows="4"
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
                    placeholder="Share your suggestions..."
                ></textarea>
            </div>

            <div>
                <button
                    type="submit"
                    class="w-full bg-primary-600 text-white py-3 px-6 rounded-md hover:bg-primary-700 transition duration-200"
                >
                    Submit
                </button>
            </div>
        </form>
    </div>
</Layout> 