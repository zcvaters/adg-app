---
import '../styles/global.css'
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact - Avalon Disc Golfers">
	<div class="relative text-center mb-12 py-16 bg-gradient-to-b from-blue-50 to-white rounded-lg overflow-hidden">
		<!-- Decorative disc golf elements -->
		<div class="absolute top-0 right-0 transform translate-x-1/2 -translate-y-1/2 opacity-5">
			<svg class="w-96 h-96" viewBox="0 0 24 24" fill="currentColor">
				<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
				<circle cx="12" cy="12" r="3"/>
			</svg>
		</div>
		<div class="absolute bottom-0 left-0 transform -translate-x-1/2 translate-y-1/2 opacity-5">
			<svg class="w-72 h-72" viewBox="0 0 24 24" fill="currentColor">
				<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
				<circle cx="12" cy="12" r="3"/>
			</svg>
		</div>
		<h1 class="text-5xl font-bold text-blue-600 mb-4">Contact Us</h1>
		<p class="text-xl text-gray-700 max-w-2xl mx-auto">
			Get in touch with us about events, membership, or any questions you have
		</p>
	</div>

	<div class="max-w-4xl mx-auto grid md:grid-cols-2 gap-8">
		<div class="bg-white p-6 rounded-lg shadow-md relative overflow-hidden">
			<div class="absolute top-0 right-0 w-24 h-24 transform translate-x-8 -translate-y-8 opacity-5">
				<svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full">
					<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
				</svg>
			</div>
			<div class="flex items-center mb-6 text-blue-600">
				<svg class="w-8 h-8 mr-3" viewBox="0 0 24 24" fill="currentColor">
					<path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 14H4V8l8 5 8-5v10zm-8-7L4 6h16l-8 5z"/>
				</svg>
				<h2 class="text-2xl font-bold">Send us a Message</h2>
			</div>
			<form
				action="https://formspree.io/f/mrbelovk"
				method="POST"
				class="space-y-4"
			>
				<div>
					<label for="name" class="block text-gray-700 font-medium mb-2">Name</label>
					<input
						type="text"
						name="name"
						id="name"
						required
						class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
					/>
				</div>
				<div>
					<label for="email" class="block text-gray-700 font-medium mb-2">Email</label>
					<input
						type="email"
						name="email"
						id="email"
						required
						class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
					/>
				</div>
				<div>
					<label for="message" class="block text-gray-700 font-medium mb-2">Message</label>
					<textarea
						name="message"
						id="message"
						rows="4"
						required
						class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
					></textarea>
				</div>
				<button
					type="submit"
					class="w-full inline-flex items-center justify-center gap-2 bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition duration-300"
				>
					<svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
						<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
						<circle cx="12" cy="12" r="3"/>
					</svg>
					Send Message
				</button>
			</form>
		</div>

		<div class="bg-white p-6 rounded-lg shadow-md relative overflow-hidden">
			<div class="absolute top-0 right-0 w-24 h-24 transform translate-x-8 -translate-y-8 opacity-5">
				<svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full">
					<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
				</svg>
			</div>
			<div class="flex items-center mb-6 text-blue-600">
				<svg class="w-8 h-8 mr-3" viewBox="0 0 24 24" fill="currentColor">
					<path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
				</svg>
				<h2 class="text-2xl font-bold">Connect With Us</h2>
			</div>
			<div class="space-y-6">
				<div>
					<h3 class="text-lg font-semibold text-gray-800 mb-3">Follow Us</h3>
					<div class="flex gap-4">
						<a 
							href="https://www.facebook.com/groups/1705263463278631" 
							class="flex items-center gap-2 text-blue-600 hover:text-blue-800 transition-colors"
							target="_blank"
							rel="noopener noreferrer"
						>
							<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
								<path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/>
							</svg>
							<span>Facebook</span>
						</a>
						<a 
							href="https://www.instagram.com/avalondiscgolfers" 
							class="flex items-center gap-2 text-blue-600 hover:text-blue-800 transition-colors"
							target="_blank"
							rel="noopener noreferrer"
						>
							<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
								<path d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"/>
							</svg>
							<span>Instagram</span>
						</a>
					</div>
				</div>
				<div>
					<h3 class="text-lg font-semibold text-gray-800 mb-3">Email Us</h3>
					<a 
						href="mailto:info@avalondiscgolfers.ca"
						class="flex items-center gap-2 text-blue-600 hover:text-blue-800 transition-colors"
					>
						<svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
							<path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 14H4V8l8 5 8-5v10zm-8-7L4 6h16l-8 5z"/>
						</svg>
						<span>info@avalondiscgolfers.com</span>
					</a>
				</div>
			</div>
		</div>
	</div>
</Layout> 