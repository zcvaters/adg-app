---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Thank You | Avalon Disc Golfers">
	<div class="max-w-2xl mx-auto py-16 px-4 text-center">
		<h1 class="text-4xl font-bold text-gray-900 mb-4">Thank You!</h1>
		<p class="text-lg text-gray-600 mb-8">Your message has been received. We'll get back to you as soon as possible.</p>
		<a 
			href="/" 
			class="inline-block bg-blue-600 text-white py-2 px-6 rounded-md hover:bg-blue-700 transition duration-300"
		>
			Return Home
		</a>
	</div>
</Layout> 