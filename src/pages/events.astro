---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Events - Avalon Disc Golfers">
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-blue-600 mb-4">Events</h1>
        <p class="text-xl text-gray-700 max-w-2xl mx-auto">
            Follow us on <a href="https://www.facebook.com/avalondisc" class="text-blue-600 hover:text-blue-800 underline">Facebook</a> or <a href="https://www.instagram.com/avalondisc" class="text-blue-600 hover:text-blue-800 underline">Instagram</a> for event updates.
        </p>
    </div>

    <div class="text-center bg-white p-8 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold text-gray-800 mb-4">Want to Host an Event?</h2>
        <p class="text-gray-700 mb-6">
            We're always excited to collaborate with the community on new events. 
            Contact us to discuss your ideas!
        </p>
        <a 
            href="/contact" 
            class="inline-block bg-blue-600 text-white py-2 px-6 rounded-md hover:bg-blue-700 transition duration-300"
        >
            Get in Touch
        </a>
    </div>
</Layout> 