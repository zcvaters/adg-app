---
import '../styles/global.css';
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import InstagramFeed from '../components/InstagramFeed.astro';
import EventCard from '../components/EventCard.astro';
import { getNextEvent } from '../data/events';
import FacebookFeed from '../components/FacebookFeed.astro';

const nextEvent = getNextEvent();
---

<Layout title="Avalon Disc Golfers">
	<main class="page-transition">
		<!-- Hero Section with Disc Golf Background -->
		<div class="relative text-center mb-12 py-16 bg-gradient-to-b from-primary-100 to-bg-primary rounded-lg overflow-hidden shadow-lg border border-primary-200">
			<!-- Add banner image as background -->
			<div class="absolute inset-0 z-0">
				<Image 
					src={"/banner.jpg"}
					alt="Avalon Disc Golf Championship 2024" 
					class="w-full h-full object-cover opacity-30"
					width={1920}
					height={1080}
					loading="eager"
				/>
			</div>
			
			<!-- Existing content with increased z-index -->
			<div class="relative z-10">
				<!-- Decorative disc golf elements -->
				<div class="absolute top-0 right-0 transform translate-x-1/2 -translate-y-1/2 opacity-10 animate-spin-slow">
					<svg class="w-96 h-96 text-primary-400" viewBox="0 0 24 24" fill="currentColor">
						<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
						<circle cx="12" cy="12" r="3"/>
					</svg>
				</div>
				<div class="absolute bottom-0 left-0 transform -translate-x-1/2 translate-y-1/2 opacity-10 animate-float">
					<svg class="w-72 h-72 text-primary-400" viewBox="0 0 24 24" fill="currentColor">
						<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
						<circle cx="12" cy="12" r="3"/>
					</svg>
				</div>
				
				<h1 class="text-5xl font-bold text-primary-700 mb-4 animate-fade-in">Avalon Disc Golfers</h1>
				<p class="text-2xl text-primary-600 mb-8 max-w-2xl mx-auto animate-fade-in" style="animation-delay: 0.2s;">
					Growing the sport of disc golf across Newfoundland's Avalon Peninsula
				</p>
			</div>
		</div>

		<section class="mb-12 text-center relative reveal-on-scroll">
			<div class="absolute top-0 right-0 w-24 h-24 transform translate-x-12 -translate-y-12 opacity-10">
				<svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full text-primary-400">
					<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
				</svg>
			</div>
			<h2 class="text-3xl font-bold text-primary-700 mb-4">Our Mission</h2>
			<p class="text-lg text-primary-600 max-w-2xl mx-auto">
				Avalon Disc Golfers is a not-for-profit organization dedicated to developing, promoting, and supporting disc golf in the Avalon region of Newfoundland and Labrador.
			</p>
		</section>

		<section class="mb-12">
			<h2 class="text-3xl font-bold text-primary-700 mb-6 text-center">What We Do</h2>
			<div class="grid md:grid-cols-3 gap-6">
				<div class="bg-white p-6 rounded-lg shadow-md border border-primary-100 transform hover:scale-105 transition-transform">
					<div class="text-primary-500 mb-4">
						<svg class="w-12 h-12 mx-auto" viewBox="0 0 24 24" fill="currentColor">
							<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
							<circle cx="12" cy="12" r="3"/>
						</svg>
					</div>
					<h3 class="text-xl font-semibold text-primary-600 mb-3">Course Development</h3>
					<p class="text-primary-600">Build, maintain, and improve disc golf courses across the Avalon peninsula</p>
				</div>
				<div class="bg-white p-6 rounded-lg shadow-md border border-primary-100 transform hover:scale-105 transition-transform">
					<div class="text-primary-500 mb-4">
						<svg class="w-12 h-12 mx-auto" viewBox="0 0 24 24" fill="currentColor">
							<path d="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM7 10h5v5H7z"/>
						</svg>
					</div>
					<h3 class="text-xl font-semibold text-primary-600 mb-3">Events</h3>
					<p class="text-primary-600">Organize and host disc golf tournaments and community events</p>
				</div>
				<div class="bg-white p-6 rounded-lg shadow-md border border-primary-100 transform hover:scale-105 transition-transform">
					<div class="text-primary-500 mb-4">
						<svg class="w-12 h-12 mx-auto" viewBox="0 0 24 24" fill="currentColor">
							<path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"/>
						</svg>
					</div>
					<h3 class="text-xl font-semibold text-primary-600 mb-3">Community Outreach</h3>
					<p class="text-primary-600">Grow the sport through education, training, and community engagement</p>
				</div>
			</div>
		</section>

		{nextEvent && (
			<section class="mb-12">
				<h2 class="text-3xl font-bold text-primary-700 mb-6 text-center">Next Event</h2>
				<EventCard {...nextEvent} />
			</section>
		)}
	
		<section class="mb-12">
			<h2 class="text-3xl font-bold text-gray-800 mb-6 text-center">Latest Updates</h2>
			<div class="grid md:grid-cols-2 gap-6">
				<InstagramFeed />
				<FacebookFeed />
			</div>
		</section>

		<section class="mb-12 bg-white p-8 rounded-lg shadow-md relative overflow-hidden">
			<div class="absolute top-0 right-0 w-32 h-32 transform translate-x-16 -translate-y-16 opacity-5">
				<svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full">
					<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
				</svg>
			</div>
			<h2 class="text-3xl font-bold text-gray-800 mb-4">Support Our Mission</h2>
			<p class="text-lg text-gray-700 mb-4">We fund our initiatives through:</p>
			<ul class="list-none text-gray-700 space-y-3">
				<li class="flex items-center">
					<svg class="w-5 h-5 mr-2 text-blue-600" viewBox="0 0 24 24" fill="currentColor">
						<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
						<circle cx="12" cy="12" r="3"/>
					</svg>
					Membership fees
				</li>
				<li class="flex items-center">
					<svg class="w-5 h-5 mr-2 text-blue-600" viewBox="0 0 24 24" fill="currentColor">
						<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
						<circle cx="12" cy="12" r="3"/>
					</svg>
					Community donations
				</li>
				<li class="flex items-center">
					<svg class="w-5 h-5 mr-2 text-blue-600" viewBox="0 0 24 24" fill="currentColor">
						<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
						<circle cx="12" cy="12" r="3"/>
					</svg>
					Merchandise sales
				</li>
				<li class="flex items-center">
					<svg class="w-5 h-5 mr-2 text-blue-600" viewBox="0 0 24 24" fill="currentColor">
						<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
						<circle cx="12" cy="12" r="3"/>
					</svg>
					Government grants
				</li>
			</ul>
		</section>

	</main>
</Layout>
