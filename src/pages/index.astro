	<script>
	import { animate, inView, stagger } from 'motion';
	const runAnimate = animate as any;

	const setupDiscSection = () => {
		const section = document.querySelector<HTMLElement>('.disc-moments');
		if (!section) return;

		const cards = section.querySelectorAll<HTMLElement>('.disc-card');
		let flightAnimationPlayed = false;
		const startSvgAnimation = (selector: string) => {
			const animation = section.querySelector(selector) as SVGAnimationElement | null;
			animation?.beginElement();
		};

		section.style.opacity = '0.75';
		section.style.transform = 'translateY(20px)';
		cards.forEach((card) => {
			card.style.opacity = '0';
			card.style.transform = 'translateY(22px)';
		});

		inView(section, () => {
			runAnimate(
				section,
				{ opacity: [0.7, 1], transform: ['translateY(20px)', 'translateY(0px)'] },
				{ duration: 0.45, easing: 'ease-out' }
			);

			runAnimate(
				cards,
				{ opacity: [0, 1], transform: ['translateY(22px)', 'translateY(0px)'] },
				{ delay: stagger(0.1), duration: 0.45, easing: 'ease-out' }
			);

			if (!flightAnimationPlayed) {
				startSvgAnimation('#flight-throw-motion');
				startSvgAnimation('#flight-basket-rattle');
				startSvgAnimation('#flight-hit-opacity');
				startSvgAnimation('#flight-hit-radius');
				flightAnimationPlayed = true;
			}
		}, { amount: 0.2 });
	};

	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', setupDiscSection);
	} else {
		setupDiscSection();
	}
</script>

