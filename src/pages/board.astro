---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Board - Avalon Disc Golfers">
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-blue-600 mb-4">2025 Board of Directors</h1>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <div class="w-40 h-40 mx-auto mb-4 bg-gray-100 rounded-lg"></div>
            <h3 class="text-xl font-semibold text-gray-800 mb-1">Ed Hartling</h3>
            <p class="text-blue-600 font-medium">President</p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <div class="w-40 h-40 mx-auto mb-4 bg-gray-100 rounded-lg"></div>
            <h3 class="text-xl font-semibold text-gray-800 mb-1">Adam Peddle</h3>
            <p class="text-blue-600 font-medium">Vice President</p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <div class="w-40 h-40 mx-auto mb-4 bg-gray-100 rounded-lg"></div>
            <h3 class="text-xl font-semibold text-gray-800 mb-1">Cordale Langford</h3>
            <p class="text-blue-600 font-medium">Treasurer</p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <div class="w-40 h-40 mx-auto mb-4 bg-gray-100 rounded-lg"></div>
            <h3 class="text-xl font-semibold text-gray-800 mb-1">Willem Peters</h3>
            <p class="text-blue-600 font-medium">Secretary</p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <div class="w-40 h-40 mx-auto mb-4 bg-gray-100 rounded-lg"></div>
            <h3 class="text-xl font-semibold text-gray-800 mb-1">Robert King</h3>
            <p class="text-blue-600 font-medium">Member at Large</p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <div class="w-40 h-40 mx-auto mb-4 bg-gray-100 rounded-lg"></div>
            <h3 class="text-xl font-semibold text-gray-800 mb-1">Frank Morin</h3>
            <p class="text-blue-600 font-medium">Member at Large</p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <div class="w-40 h-40 mx-auto mb-4 bg-gray-100 rounded-lg"></div>
            <h3 class="text-xl font-semibold text-gray-800 mb-1">Chris Evans</h3>
            <p class="text-blue-600 font-medium">Member at Large</p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <div class="w-40 h-40 mx-auto mb-4 bg-gray-100 rounded-lg"></div>
            <h3 class="text-xl font-semibold text-gray-800 mb-1">Zach Vaters</h3>
            <p class="text-blue-600 font-medium">Member at Large</p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <div class="w-40 h-40 mx-auto mb-4 bg-gray-100 rounded-lg"></div>
            <h3 class="text-xl font-semibold text-gray-800 mb-1">Keegan Pender</h3>
            <p class="text-blue-600 font-medium">Junior Officer</p>
        </div>
    </div>

    <div class="mt-12 bg-white p-8 rounded-lg shadow-md text-center">
        <h2 class="text-2xl font-bold text-gray-800 mb-4">Get Involved</h2>
        <p class="text-gray-700 mb-4">
            We're always looking for passionate individuals to help grow the sport of disc golf in our community.
        </p>
        <a 
            href="/contact" 
            class="inline-block bg-blue-600 text-white py-2 px-6 rounded-md hover:bg-blue-700 transition duration-300"
        >
            Contact Us to Learn More
        </a>
    </div>
</Layout> 