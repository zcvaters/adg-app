---
import Layout from '../layouts/Layout.astro';
import { boardMembers } from '../data/board';
import { Image } from 'astro:assets';
---

<Layout title="Board Members" description="Meet the volunteer board members of Avalon Disc Golfers, the disc golf club serving St. John's and the Avalon Peninsula in Newfoundland and Labrador.">
    <div class="relative text-center mb-12 py-16 bg-gradient-to-b from-primary-100 to-bg-primary rounded-lg overflow-hidden">
        <!-- Decorative disc golf elements -->
        <div class="absolute top-0 right-0 transform translate-x-1/2 -translate-y-1/2 opacity-10">
            <svg class="w-48 md:w-96 h-48 md:h-96" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
                <circle cx="12" cy="12" r="3"/>
            </svg>
        </div>
        <div class="absolute bottom-0 left-0 transform -translate-x-1/2 translate-y-1/2 opacity-10">
            <svg class="w-36 md:w-72 h-36 md:h-72" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
                <circle cx="12" cy="12" r="3"/>
            </svg>
        </div>
        <h1 class="text-4xl md:text-5xl font-bold text-primary-700 mb-4">2025 Board of Directors</h1>
        <p class="text-lg md:text-xl text-primary-600 max-w-2xl mx-auto px-4">
            Meet the dedicated team growing disc golf in the Avalon region
        </p>
    </div>

    <div class="container mx-auto px-4">
        <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-12">
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="bg-primary-700 text-white">
                            <th class="px-6 py-4 text-left text-lg font-semibold">Name</th>
                            <th class="px-6 py-4 text-left text-lg font-semibold">Position</th>
                        </tr>
                    </thead>
                    <tbody>
                        {boardMembers.map((member, index) => (
                            <tr class={index % 2 === 0 ? 'bg-white' : 'bg-primary-50'}>
                                <td class="px-6 py-4">
                                    <div class="flex items-center">
                                        <div>
                                            <div class="text-lg font-medium text-gray-900">{member.name}</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-lg text-primary-600 font-medium">{member.position}</div>
                                </td>
                            </tr>
                        ))}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-12 bg-white p-8 rounded-lg shadow-md text-center relative overflow-hidden">
            <div class="absolute top-0 right-0 w-32 h-32 transform translate-x-16 -translate-y-16 opacity-5">
                <svg viewBox="0 0 24 24" fill="currentColor" class="w-full h-full">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
                </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-800 mb-4">Get Involved</h2>
            <p class="text-gray-700 mb-4">
                We're always looking for passionate individuals to help grow the sport of disc golf in our community.
            </p>
            <a 
                href="/contact" 
                class="inline-flex items-center gap-2 bg-primary-600 text-white py-2 px-6 rounded-md hover:bg-primary-700 transition duration-300"
            >
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
                    <circle cx="12" cy="12" r="3"/>
                </svg>
                Contact Us to Learn More
            </a>
        </div>
    </div>
</Layout> 