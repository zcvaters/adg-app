---
// Facebook Feed Component
const FACEBOOK_PAGE_ID = '100094687651350';
---

<div class="facebook-feed w-full px-4">
    <div class="grid grid-cols-1 gap-6 max-w-5xl mx-auto">
        <div class="facebook-embed-container">
            <iframe 
                src={`https://www.facebook.com/plugins/page.php?href=https%3A%2F%2Fwww.facebook.com%2Fprofile.php%3Fid%3D${FACEBOOK_PAGE_ID}&tabs=timeline&width=500&height=800&small_header=false&adapt_container_width=true&hide_cover=false&show_facepile=true&appId=`}
                width="500"
                height="800"
                style="border:none;overflow:hidden"
                scrolling="no"
                frameborder="0"
                allowfullscreen="true"
                allow="autoplay; clipboard-write; encrypted-media; picture-in-picture; web-share"
                class="facebook-embed"
                loading="lazy"
            ></iframe>
        </div>
    </div>
</div>

<style>
    .facebook-feed {
        margin: 3rem 0;
    }
    
    .facebook-embed-container {
        position: relative;
        padding-bottom: 120%;
        height: 0;
        overflow: hidden;
        max-width: 100%;
    }
    
    .facebook-embed {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: white;
        border-radius: 8px;
        box-shadow: 0 0 1px 0 rgba(0,0,0,0.5),0 1px 10px 0 rgba(0,0,0,0.15);
    }

    @media (min-width: 768px) {
        .facebook-embed-container {
            padding-bottom: 100%;
        }
    }
</style>