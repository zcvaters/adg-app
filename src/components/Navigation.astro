---
import { Image } from 'astro:assets';
---
<nav class="w-full bg-white shadow-md sticky top-0 z-[1000]">
    <div class="max-w-7xl mx-auto p-4 flex justify-between items-center md:flex-row flex-col md:gap-0 gap-4">
        <div class="nav-logo flex items-center gap-4 min-h-[65px]">
            <a href="/" class="block h-[65px] w-[90px]">
                <Image 
                    src="/adg-logo.jpg" 
                    alt="ADG Logo" 
                    width={90} 
                    height={65}
                    class="h-full w-full object-contain" 
                    loading="eager"
                    decoding="sync"
                />
            </a>
            <span class="text-xl font-semibold text-gray-800">Avalon Disc Golfers</span>
        </div>
        <div class="flex items-center md:gap-8 gap-4 flex-wrap justify-center">
            <a href="/" class="text-gray-800 font-medium hover:text-blue-600 transition-colors px-2">Home</a>
            <a href="/courses" class="text-gray-800 font-medium hover:text-blue-600 transition-colors px-2">Courses</a>
            <a href="/board" class="text-gray-800 font-medium hover:text-blue-600 transition-colors px-2">Board</a>
            <a href="/events" class="text-gray-800 font-medium hover:text-blue-600 transition-colors px-2">Events</a>
            <a href="/contact" class="text-gray-800 font-medium hover:text-blue-600 transition-colors px-2">Contact</a>
            <Image 
                src="/nl-flag.png" 
                alt="Dutch Flag" 
                width={30} 
                height={20}
                class="h-5 w-auto object-contain" 
            />
        </div>
    </div>
</nav>
