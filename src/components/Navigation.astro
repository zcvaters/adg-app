---
import { Image } from 'astro:assets';
---
<nav class="w-full bg-white shadow-lg sticky top-0 z-[1000] border-b border-primary-200">
    <div class="max-w-7xl mx-auto p-4 flex justify-between items-center md:flex-row flex-col md:gap-0 gap-4">
        <div class="nav-logo flex items-center gap-4 min-h-[65px]">
            <a href="/" class="block h-[65px] w-[90px] hover:opacity-90 transition-opacity">
                <Image 
                    src="/adg-logo.jpg" 
                    alt="ADG Logo" 
                    width={90} 
                    height={65}
                    class="h-full w-full object-contain" 
                    loading="eager"
                    decoding="sync"
                />
            </a>
        </div>
        <div class="flex items-center md:gap-8 gap-4 flex-wrap justify-center">
            <a href="/" class="text-primary-600 font-medium hover:text-primary-800 transition-colors px-3 py-2 rounded-md hover:bg-primary-50">Home</a>
            <a href="/join" class="text-primary-600 font-medium hover:text-primary-800 transition-colors px-3 py-2 rounded-md hover:bg-primary-50">Join</a>
            <a href="/courses" class="text-primary-600 font-medium hover:text-primary-800 transition-colors px-3 py-2 rounded-md hover:bg-primary-50">Courses</a>
            <a href="/board" class="text-primary-600 font-medium hover:text-primary-800 transition-colors px-3 py-2 rounded-md hover:bg-primary-50">Board</a>
            <a href="/events" class="text-primary-600 font-medium hover:text-primary-800 transition-colors px-3 py-2 rounded-md hover:bg-primary-50">Events</a>
            <a href="/contact" class="text-primary-600 font-medium hover:text-primary-800 transition-colors px-3 py-2 rounded-md hover:bg-primary-50">Contact</a>
        </div>
    </div>
</nav>
